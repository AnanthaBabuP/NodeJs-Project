<!-- views/list.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Item List</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="../../Style/paginationStyles.css">
    <link rel="stylesheet" type="text/css" href="../../Style/header_and_footer.css">
    <link rel="stylesheet" type="text/css" href="../../Style/table.css">
</head>
<body>
   <!-- Header -->
   <%- include('../Component/Header.ejs') %>

    <!-- Main Content -->
    <div class="container">
        <h1 class="mt-4 font_white">Item List</h1>
        <!-- Pagination controls -->
        <%- include('../Pagination/pagination.ejs') %>
        <!-- Display paginated items -->
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Employee Name</th>
                    <th>Age</th>
                    <th>Gender</th>
                    <th>Qualification</th>
                    <th>Role</th>
                    <th>E-Mail</th>
                    <th>Current Employee</th>
                </tr>
            </thead>
            <tbody id="itemTableBody">
                <% items.forEach(item => { %>
                    <tr>
                        <td><%= item.id %></td>
                        <td><%= item.name %></td>
                        <td><%= item.age %></td>
                        <td><%= item.gender === 0 ? 'Female' : 'Male' %></td>
                        <td><%= item.qualification %></td>
                        <td><%= item.role %></td>
                        <td><%= item.mail_id %></td>
                        <td><%= item.current_employee === 0 ? 'No' : 'Yes' %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

     <!-- Footer -->
     <%- include('../Component/footer.ejs') %>

    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
